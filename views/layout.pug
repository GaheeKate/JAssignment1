block variables
doctype html
html
  head
    meta(charset="utf-8")
    link(rel="shortcut icon", href="/favicon.ico")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="theme-color", content="#000000")
    title #{title} 
    block script
      link(rel="stylesheet", type="text/css" href="/styles.css")
      script(src="/home.js") 

  body
    header#header
        .header-content
            h2#site-name
                a(class='site-name' href="/") Korean Meal Magic

    main#main-navigation 
      ul
        each lk in menu 
          li 
            a(href=lk.path) #{lk.name}
    main#main
        block main-content
    footer#footer
        p &copy; Copyright Gahee Choi, 2023
